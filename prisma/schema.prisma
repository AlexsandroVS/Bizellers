// Prisma Schema para Bizellers Dashboard

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id         Int      @id @default(autoincrement())
  nombre     String   @db.VarChar(255)
  cargo      String   @db.VarChar(255)
  empresa    String   @db.VarChar(255)
  telefono   String   @db.VarChar(50)
  correo     String   @db.VarChar(255)
  servicio   String   @db.VarChar(255)
  mensaje    String?  @db.Text
  created_at DateTime @default(now()) @db.Timestamp()

  // Nuevos campos para el dashboard
  status         String   @default("nuevo") @db.VarChar(50)  // nuevo, contactado, negociacion, cerrado
  notes          String?  @db.Text
  updated_at     DateTime @default(now()) @updatedAt @db.Timestamp()
  status_history Json?    // Array de cambios de status con timestamps

  @@map("leads")
}

model NewsletterSubscription {
  id                   Int       @id @default(autoincrement())
  email                String    @unique @db.VarChar(255)
  createdAt            DateTime  @default(now()) @db.Timestamp()
  welcomeEmailSentAt   DateTime? @db.Timestamp()

  @@map("newsletter_subscriptions")
}
